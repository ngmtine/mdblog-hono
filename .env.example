# URL of the git repository containing blog posts
VITE_POSTS_REPO_URL=https://github.com/your-username/your-blog-articles.git

# Directory where the repository will be cloned
VITE_POSTS_REPO_DIR=posts_repo

# Directory containing blog posts (relative path within the cloned repo)
# Expected structure:
#   posts_repo/
#   ├── posts/       <- markdown files
#   └── images/      <- images referenced in posts

VITE_SITE_TITLE="my honox blog"
VITE_GITHUB_USERNAME=
VITE_TWITTER_USERNAME=
VITE_AUTHOR=

# PostgreSQL direct connection
# Supabaseの場合: Settings → Database → Connection string → URI
VITE_DB_CONNECTION_STRING=postgres://user:password@host:5432/postgres

VITE_BASE_URL_DEV=http://localhost:5173
VITE_BASE_URL_PROD="https://[your-domain.com]"

# Cloudflare Workers settings
HYPERDRIVE_ID=your_hyperdrive_id
ROUTES_PATTERN=your-domain.com
ROUTES_ZONE=your-domain.com

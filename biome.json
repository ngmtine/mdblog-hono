{
    "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": true,
        "includes": ["**", "!node_modules", "!.next", "!dist", "!build", "!package-lock.json"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 200
    },
    "css": {
        "parser": {
            "cssModules": true,
            "tailwindDirectives": true
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "nursery": {
                "useSortedClasses": "warn"
            }
        }
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": {
                    "level": "on",
                    "options": {
                        "groups": [
                            { "type": false, "source": ":NODE:" },
                            { "type": true, "source": ":NODE:" },
                            ":BLANK_LINE:",
                            { "type": false, "source": ":PACKAGE:" },
                            { "type": true, "source": ":PACKAGE:" },
                            ":BLANK_LINE:",
                            { "type": false, "source": ":ALIAS:" },
                            { "type": false, "source": ":PATH:" },
                            { "type": true, "source": ":ALIAS:" },
                            { "type": true, "source": ":PATH:" },
                            ":BLANK_LINE:",
                            { "type": false },
                            { "type": true },
                            ":BLANK_LINE:"
                        ]
                    }
                }
            }
        }
    }
}
